#############################
# Shared Configuration      #
#############################

# Frontend expects the backend at this URL
VITE_API_BASE_URL=http://localhost:8080

#############################
# Backend Server Settings   #
#############################

PORT=8080
FRONTEND_URL=http://localhost:8080

# Database connection (PostgreSQL)
DATABASE_URL=postgres://archer_aqua_user:yourpassword@postgres:5432/archer_aqua?sslmode=disable

# Comma-separated list of origins allowed to call the backend
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000,https://health.adarcher.app
VITE_ARCHER_HEALTH_URL=https://health.adarcher.app

#############################
# JWT Authentication        #
#############################

JWT_SECRET=replace-with-strong-secret
JWT_ISSUER=archer-aqua
JWT_EXPIRES_IN=168h

#############################
# Google OAuth              #
#############################

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback

#############################
# Email/SMTP Configuration  #
#############################

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Archer Aqua
EMAIL_VERIFICATION_REQUIRED=true

#############################
# Database Password         #
#############################

POSTGRES_PASSWORD=your-secure-database-password

